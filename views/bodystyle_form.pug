extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='type') Body Style:
      input#name.form-control(type='text', placeholder='SUV, Truck etc.' name='type' value=(undefined===bodystyle ? '' : bodystyle.type))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
