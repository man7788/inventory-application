extends layout

block content
  h1 #{title}: #{manufacturer.name}
  h3 Country: #{manufacturer.origin}

  if manufacturer_cars.length

    p #[strong Delete the following cars before attempting to delete this manufacturer.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Cars

      dl
      each car in manufacturer_cars
        dt
          a(href=car.url) #{car.name}
        dd (#{car.manufacturer.name})

  else
    p Do you really want to delete this Manufacturer?

    form(method='POST' action='')
      div.form-group
        input#authorid.form-control(type='hidden',name='manufacturerid', required='true', value=manufacturer._id )

      button.btn.btn-primary(type='submit') Delete
