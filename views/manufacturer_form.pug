extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#first_name.form-control(type='text' placeholder='Name' name='name' required='true' value=(undefined===manufacturer ? '' : manufacturer.name) )
      label(for='origin') Origin:
      input#family_name.form-control(type='text' placeholder='Origin' name='origin' required='true' value=(undefined===manufacturer ? '' : manufacturer.origin))
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
